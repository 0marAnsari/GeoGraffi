<h1>Account Information</h1>

<!-- Header Navigation -->
<div class="header-links">
  <%= link_to 'Home', root_path, class: 'btn btn-secondary' %>
  <%= link_to 'Graffiti Entries', entries_path, class: 'btn btn-primary' %>
</div>

<%= form_with(model: @user, local: true, url: user_path(@user), method: :patch) do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username, value: @user.username, required: true %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, value: @user.email, required: true %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: "Enter new password (leave blank to keep current)" %>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, placeholder: "Confirm new password" %>
  </div>

  <div>
    <%= form.submit "Update Account", class: 'btn btn-success' %>
  </div>
<% end %>
