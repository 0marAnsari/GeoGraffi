<h1 class="d-flex justify-content-center">Edit Graffiti Entry</h1>

<div class="d-flex justify-content-center">
<%= form_with(model: @entry, local: true) do |form| %>
  <div>
    <%= form.label :name, "Name" %>
    <%= form.text_field :name, placeholder: "Enter graffiti name", required: true, class: "form-control" %>
  </div>

  <div>
    <%= form.label :image_url %>
    <%= form.text_field :image_url, placeholder: "Enter image URL", required: true, class: "form-control" %>
  </div>

  <div>
    <%= form.label :address %>
    <%= form.text_field :address, placeholder: "Enter address", required: true, class: "form-control" %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description, placeholder: "Enter a description", required: true, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-center">
    <%= form.submit "Update Entry", class: 'btn btn-success mt-3' %>
  </div>
</div>
<% end %>
